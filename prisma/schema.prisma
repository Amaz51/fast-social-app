// schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id         String   @id @unique @default(cuid())
  userName   String
  password   String
  email      String
  registerAt DateTime @default(now())

  profile UserProfile?
}

model UserProfile {
  profileid      String   @id @unique
  firstName      String
  lastName       String
  bio            String
  gender         String
  dateOfBirth    DateTime
  followingCount Int      @default(0)
  followerCount  Int      @default(0)
  profilePicture String

  user User @relation(fields: [profileid], references: [id])
}

model Post {
  postId       String   @id @unique @default(cuid())
  userId       String
  body         String
  title        String
  likeCount    Int      @default(0)
  commentCount Int      @default(0)
  image        String
  createdAt    DateTime @default(now())
}

model Comments {
  commentId String   @id @unique @default(cuid())
  postId    String
  userId    String
  postedAt  DateTime
  body      String
  likeCount Int      @default(0)
}

model Followers {
  id                 String   @id @unique @default(cuid())
  followerId         Int
  followingId        Int
  startedFollowingAt DateTime
}
